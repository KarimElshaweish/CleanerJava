<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="6"
    tools:context="com.example.karim.cleanerjava.Activites.GlassesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glass"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/glasses_color"
       android:layout_gravity="center"
       android:layout_marginTop="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/spinner_border"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <TextView
                            android:text="@string/carModel"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerCarModel"
                            android:layout_margin="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/spinner_border"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/carName"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerCarName"
                            android:layout_margin="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:hint="@string/carNumber"
                        android:focusable="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:backgroundTint="@android:color/white"
                        android:id="@+id/editTextCarNumber"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                 <TextView
                     android:textSize="20dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/glassesFull"
                     android:textColor="@android:color/black"
                     />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxGlassesFull"
                android:layout_centerVertical="true"
                />
                </LinearLayout>
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:editable="false"
                    android:textColorHint="@android:color/black"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:gravity="center"
                    android:id="@+id/GlassesFullPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesFull"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glassesIn"
android:textColor="@android:color/black"
                        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxGlassesIn"
                android:layout_centerVertical="true"/>
                </LinearLayout>
                <TextView
                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:editable="false"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:id="@+id/GlassesInPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesIn"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:text="@string/glassesTabluAndDecorat"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkboxglassesTabluAndDecorat"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:textColorHint="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:editable="false"
                    android:id="@+id/glassesTabluAndDecoratInPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesTabluAndDecoratIn"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/glasesGlass"
android:textColor="@android:color/black"
    android:textSize="20dp"
    />
                    <CheckBox

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkboxGlasesGlass"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textColorHint="@android:color/black"
                    android:text="@string/price"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/GlasesGlassPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:id="@+id/buttonGlasesGlass"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
android:textColor="@android:color/black"
                        android:text="@string/glassesMratb"

                        />

                    <CheckBox
                        android:id="@+id/checkboxGlassesMratb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColorHint="@android:color/black"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:editable="false"
                    android:inputType="number"
                    android:gravity="center"
                    android:id="@+id/GlassesMratbPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesMratb"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="@string/glassesLight"
                        android:textSize="20dp"
                        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/checkboxGlassesLight"
                />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:gravity="center"
                    android:id="@+id/GlassesLightPrice"
                    android:editable="false"
                    android:textColorHint="@android:color/black"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesLight"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/glassesCovers"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxGlassesCovers"
                android:layout_centerVertical="true"
                />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColorHint="@android:color/black"
                    android:editable="false"
                    android:id="@+id/GlassesCoversPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonGlassesCovers"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalText"
                android:text="$"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priceTotal"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/print"
            android:layout_gravity="center"
            android:id="@+id/printTotla"
            android:layout_centerInParent="true"/>
    </LinearLayout>

</LinearLayout>
