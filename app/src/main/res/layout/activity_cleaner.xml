<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@android:color/white"
    tools:context="com.example.karim.cleanerjava.Activites.CleanerActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/cleaner"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:layout_centerInParent="true"
          android:textSize="25dp"
          android:textColor="@android:color/black"/>
  </RelativeLayout>
   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/cleaning_color"
       android:layout_gravity="center"/>
    <ScrollView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/spinner_border"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerCarModel"
                            android:textColor="@android:color/black"
                            android:text="@string/carModel"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_margin="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/spinner_border"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerCarName"
                            android:text="@string/carName"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:hint="@string/carNumber"
                        android:focusable="false"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:backgroundTint="@android:color/white"
                        android:id="@+id/editTextCarNumber"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/washOutIn"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        />
                    <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxWashOutIn"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:layout_alignParentRight="true"
                />

                </LinearLayout>
                <TextView
                    android:layout_alignParentLeft="true"
                    android:textColorHint="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:focusable="false"
                    android:inputType="number"
                    android:gravity="center"
                    android:editable="false"
                    android:text="@string/price"
                    android:textColor="@android:color/black"
                    android:id="@+id/WashOutInPrice"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/buttonWashOutIn"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/washOut"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/checkboxWashOut"
                android:clickable="false"
                />
                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColorHint="@android:color/black"                android:layout_marginRight="15dp"
                android:hint="@string/price"
                android:editable="false"
                android:inputType="number"
                android:gravity="center"
                android:focusable="false"
                android:id="@+id/WashOutPrice"
                android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:id="@+id/buttonWashOut"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/washin"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/checkboxWashin"
                android:clickable="false"
                />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColorHint="@android:color/black"                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:gravity="center"
                    android:editable="false"
                    android:focusable="false"
                    android:id="@+id/WashinPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ButtonWashinhOut"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="@string/washEngine"
    android:textColor="@android:color/black"
    />
            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_centerVertical="true"
            android:id="@+id/checkboxWashEngine"
                android:clickable="false"
            />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColorHint="@android:color/black"                    android:layout_marginRight="15dp"
                    android:hint="@string/price"
                    android:editable="false"
                    android:inputType="number"
                    android:gravity="center"
                    android:focusable="false"
                    android:id="@+id/WashEnginePrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_marginRight="15dp"
                    android:id="@+id/ButtonWashEngine"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/washBastm"
                        android:textColor="@android:color/black"
                        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxWashBastm"
                android:layout_centerVertical="true"
                android:clickable="false"
                />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/price"
                    android:inputType="number"
                    android:gravity="center"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_alignParentLeft="true"
                    android:textColorHint="@android:color/black"                    android:id="@+id/WashBastmPrice"
                    android:layout_height="wrap_content" />
                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:layout_marginRight="15dp"
                    android:id="@+id/ButtonWashBastm"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/textTotal"
                android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/priceTotal"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/print"
            android:layout_gravity="center"
            android:id="@+id/printTotla"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</LinearLayout>